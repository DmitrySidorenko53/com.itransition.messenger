@model com.itransition.messenger.Models.ViewModels.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"
    />
    <title>Welcome</title>
  </head>
  <body class="bg-black bg-opacity-75 text-white">
    <div class="container-lg mt-5 w-75">
      <div class="row justify-content-center">
        <div class="col-lg-5 bg-dark bg-opacity-50 p-3">
          <h1 class="text-center">Welcome</h1>
          <h5 class="text-center">Enter your nickname to login</h5>
            <form asp-action="" asp-controller="Welcome" method="post">
              <label asp-for="Nickname" class="form-label mt-2">Nickname: </label>
              <input
                asp-for="Nickname"
                placeholder="Enter"
                class="form-control bg-dark bg-opacity-100 text-white"
                required
              />
              <span asp-validation-for="Nickname"></span>
              <div class="row mt-2 w-50">
                <div class="col-6">
                  <button type="submit" class="btn btn-dark mt-3 w-100">
                    <i class="fi fi-rr-check"></i>
                  </button>
                </div>
                <div class="col-6">
                  <button type="reset" class="btn btn-dark mt-3 w-100">
                    <i class="fi fi-rr-cross"></i>
                  </button>
                </div>
              </div>
            </form>
        </div>
      </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>